---
layout: layout.njk
permalink: /data/
---
{% set theJs %}
    {% include 'data.js' %}
{% endset %}
<!-- Page Heading -->
 <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">{{env.DATAMAIN | capitalize }}</h1>
    <a href="/{{env.DATAMAIN}}/new/" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm" id="btn-create-cy">
    <i class="fas fa-download fa-sm text-white-50"></i> Create New</a>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Currect {{env.DATAMAIN | capitalize }}</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Customer Name</th>
                        <th>Payment Address</th>
                        <th>Amount ($)</th>
                        <th>Paid</th>
                        <th>Date Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Customer Name</th>
                        <th>Payment Address</th>
                        <th>Amount ($)</th>
                        <th>Paid</th>
                        <th>Date Created</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
{% if env.ENVIRONMENT == 'local' %}
    <script type="text/javascript">{{theJs | safe}}</script>
{% else %}
    <script type="text/javascript">{{theJs | jsmin | safe}}</script>
{% endif %}

