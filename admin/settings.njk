---
layout: layout.njk
---
{% set theJs %}
    {% include 'settings.js' %}
{% endset %}
<!-- Page Heading -->
<h1 class="h3 mb-4 text-gray-800">Settings</h1>
<p class="mb-4">
</p>
<div class="alert alert-success  d-none" role="alert" id="accountsSuccess">
</div>
<div class="alert alert-danger  d-none" role="alert" id="accountsAlert">
</div>
<div class="form-group">
    <label>Add a BTC address</label>
    <input type="text" class="form-control form-control-user" id="inp-btcaddress" aria-describedby="btcaddressHelp" placeholder="Enter btc address...">
   	<span class="text-danger d-none" id="error-btcaddress"> </span>  
</div>
<div class="form-group">
    <label>Add a xpub key</label>
    <input type="text" class="form-control form-control-user" id="inp-xpub" aria-describedby="xpubHelp" placeholder="Enter xpub...">
    <span class="text-danger d-none" id="error-xpub"> </span>  
</div>
<div class="form-group">
    <label>Add a company name</label>
    <input type="text" class="form-control form-control-user" id="inp-companyname" aria-describedby="companyNameHelp" placeholder="Enter company name...">
    <span class="text-danger" id="error-companyname"> </span>  
</div>
<button class="btn btn-primary btn-user btn-block" id="btn-edit">
    Update
</button>
{% if env.ENVIRONMENT == 'local' %}
    <script type="text/javascript">{{theJs | safe}}</script>
{% else %}
    <script type="text/javascript">{{theJs | jsmin | safe}}</script>
{% endif %}